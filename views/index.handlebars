{{!-- ./views/index.handlebars --}}

<div class="container pt-5">
  <h1>你想對誰說幹話?</h1>
  <form method="POST" action="/">
    <div class="row mt-5">
      {{!-- engineer --}}
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
            class="card-img-top" alt="engineer" height="300rem">
          <div class="card-body">
            {{!-- form --}}
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="engineer" name="occupation" class="custom-control-input" value="engineer"
                {{#if_equal occupation 'engineer'}}checked{{/if_equal}}>
              <label class="custom-control-label" for="engineer">工程師</label>
            </div>
          </div>
        </div>
      </div>
      {{!-- designer --}}
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
            class="card-img-top" alt="designer" height="300rem">
          <div class="card-body">
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="designer" name="occupation" class="custom-control-input" value="designer"
                {{#if_equal occupation 'designer'}}checked{{/if_equal}}>
              <label class="custom-control-label" for="designer">設計師</label>
            </div>
          </div>
        </div>
      </div>
      {{!-- entrepreneur --}}
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
            class="card-img-top" alt="entrepreneur" height="300rem">
          <div class="card-body">
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="entrepreneur" name="occupation" class="custom-control-input" value="entrepreneur"
                {{#if_equal occupation 'entrepreneur'}}checked{{/if_equal}}>
              <label class="custom-control-label" for="entrepreneur">創業家</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-2"><button class="btn btn-primary" type="submit">產生幹話</button>
      </div>
      <div class="col-9 nonesense">
        {{#if nonesense}}
        <h3>身為一個{{nonesense}}</h3>
        {{/if}}
        {{!-- 幹話 --}}
      </div>
    </div>
  </form>
</div>